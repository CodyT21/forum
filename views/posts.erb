<% if @posts %>
  <table style="border-spacing: 30px;">
    <thead>
      <tr>
        <th>Post Title</th>
        <th>Author</th>
        <th>Created On</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <a href="/posts/<%= post[:id] %>/comments"><%= post[:title] %></a>
          </td>
          <td><%= post[:author] %></td>
          <td><%= post[:date] %></td>
          <td>
            <% if post[:update_date] %>
              <%= post[:update_date] %>
            <% else %>
              <%= post[:date] %>
            <% end %>
          </td>
          <% if current_user_id == post[:author_id] %>
            <td><a href="/posts/<%= post[:id] %>/edit">Edit</a></td>
            <td>
              <form action="/posts/<%= post[:id] %>/delete" method="post">
                <input type="submit" value="Delete">
              </form>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No posts to display.</p>
<% end %>
<a href="/posts/new">Create New Post</a>